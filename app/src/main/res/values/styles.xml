<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="AppTheme.MainButtonStyle" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/_24sdp</item>
    <item name="android:layout_marginEnd">@dimen/_24sdp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/_15sdp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">@dimen/_40sdp</item>
    <item name="android:paddingTop">@dimen/_8sdp</item>
    <item name="android:paddingEnd">@dimen/_40sdp</item>
    <item name="android:paddingBottom">@dimen/_8sdp</item>
  </style>

  <style name="BlueButtonStyle" parent="AppTheme.MainButtonStyle">
    <item name="android:background">@drawable/button_rounded_blue</item>
  </style>

  <color name="white">#fff</color>
</resources>